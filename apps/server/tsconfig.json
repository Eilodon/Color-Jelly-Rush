{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": [
      "ES2022"
    ],
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@cjr/engine": [
        "../../packages/engine/src/index.ts"
      ],
      "@cjr/engine/*": [
        "../../packages/engine/src/*"
      ],
      "@cjr/shared": [
        "../../packages/shared/src"
      ],
      "@cjr/shared/*": [
        "../../packages/shared/src/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}